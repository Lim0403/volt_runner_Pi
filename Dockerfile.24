FROM ros:jazzy-ros-base
ENV DEBIAN_FRONTEND=noninteractive

# 1. 필수 시스템 패키지 설치 (git 추가됨)
# (수정 전과 비교해서 맨 뒤에 패키지 하나 더 추가)
RUN apt-get update && apt-get install -y \
    python3-pip python3-colcon-common-extensions \
    build-essential cmake libgpiod-dev i2c-tools usbutils git \
    ros-jazzy-joy ros-jazzy-teleop-twist-joy \
    ros-jazzy-tf-transformations \
    && rm -rf /var/lib/apt/lists/*

# 2. YDLidar SDK 설치 (새로 추가된 부분)
WORKDIR /root
RUN git clone https://github.com/YDLIDAR/YDLidar-SDK.git && \
    cd YDLidar-SDK && \
    mkdir build && \
    cd build && \
    cmake .. && \
    make && \
    make install && \
    cd .. && \
    rm -rf YDLidar-SDK

# 3. 워크스페이스 설정
WORKDIR /root/ros2_ws
COPY requirements.txt .

# 4. 파이썬 라이브러리 설치 (Jazzy용 옵션 포함)
RUN pip3 install --no-cache-dir -r requirements.txt --break-system-packages

# 5. 환경 설정
RUN echo "source /opt/ros/jazzy/setup.bash" >> ~/.bashrc
CMD ["/bin/bash"]
